{
	"name": "inox",
	"displayName": "inox",
	"description": "",
	"version": "0.1.1",
	"icon": "assets/inox-128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/inoxlang/inox-vscode"
	},
	"publisher": "graphr00t",
	"engines": {
		"vscode": "^1.77.0"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
				"id": "inox",
				"aliases": [
					"Inox",
					"inox"
				],
				"extensions": [
					".ix"
				],
				"configuration": "./language-configuration.json",
				"firstLine": "(\\s*#!.*\\binox\\b.*|manifest\\s*[{])"
			}
		],
		"grammars": [
			{
				"language": "inox",
				"scopeName": "source.inox",
				"path": "./syntaxes/inox.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "inox",
				"path": "./snippets.json"
			}
		],
		"configurationDefaults": {
			"[inox]": {
				"editor.quickSuggestions": {
					"other": "on",
					"comments": "on",
					"strings": "on"
				},
				"editor.defaultFormatter": "graphr00t.inox",
				"editor.formatOnSave": true
			},
			"editor.tokenColorCustomizations": {
				"textMateRules": [
					{
						"scope": [
							"comment.line.highlighted-start"
						],
						"settings": {
							"foreground": "#20b953"
						}
					},
					{
						"scope": [
							"comment.line.muted"
						],
						"settings": {
							"foreground": "#3d3d3d8c"
						}
					}
				]
			}
		},
		"configuration": {
			"title": "Inox",
			"properties": {
				"inox.enableProjectMode": {
					"order": 0,
					"type": "boolean",
					"default": false,
					"description": "Enable project mode, PLEASE RELAUNCH THE WINDOW AFTER THE CHANGE."
				},
				"inox.websocketEndpoint": {
					"order": 1,
					"type": "string",
					"default": "wss://localhost:8305",
					"description": "The endpoint of the Websocket LSP server to use for project mode.",
					"pattern": "^(|wss://.*)$"
				},
				"inox.localProjectServerCommand": {
					"order": 2,
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [],
					"description": "The command to start a local Inox project server. The first item is the command name and each of the other items is a single CLI argument."
				},
				"inox.localProjectServerEnv": {
					"order": 3,
					"type": "object",
					"properties": {},
					"default": [],
					"description": "Environment variables passed to the command, values that are not strings are converted to JSON"
				}
			}
		},
		"commands": [
			{
				"category": "Inox",
				"command": "inox.project.initialize",
				"title": "Initialize new Project in Current Folder"
			},
			{
				"category": "Inox",
				"command": "inox.lsp.restart",
				"title": "Restart LSP client"
			},
			{
				"command": "inox.secretKeeper.addEntry",
				"title": "Add Secret"
			},
			{
				"command": "inox.secretKeeper.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "inox.secretKeeper.updateEntry",
				"title": "Update"
			},
			{
				"category": "Inox",
				"command": "inox.clear-global-state",
				"title": "Clear Extension's Global State (Irreversible)"
			},
			{
				"category": "Inox",
				"command": "inox.clear-project-file-cache",
				"title": "Clear Project's File Cache (Irreversible)"
			},
			{
				"category": "Inox",
				"command": "inox.clear-project-file-cache",
				"title": "Clear Project's File Cache (Irreversible)"
			},
			{
				"category": "Inox",
				"command": "inox.get-project-file-cache-dir",
				"title": "Get Project's File Cache Dir"
			}
		],
		"breakpoints": [
			{
				"language": "inox"
			}
		],
		"debuggers": [
			{
				"type": "inox",
				"label": "Inox Debug",
				"languages": [
					"inox"
				],
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "The program to debug."
							},
							"logLevels": {
								"required": [
									"default"
								],
								"additionalProperties": false,
								"patternProperties": {
									"^default$": {
										"title": "Default log level of modules.",
										"enum": [
											"debug",
											"info",
											"warn",
											"error"
										]
									},
									"enableInternalDebug": {
										"title": " ⚠️ Enable debug logs of internal sources (e.g. http server). THIS CAN PRODUCE A LOT OF LOG EVENTS. This setting has no effect if the default level is not debug.",
										"type": "boolean"
									},
									"^/.*\\.ix$": {
										"title": "Log level for a specific module (file).",
										"enum": [
											"debug",
											"info",
											"warn",
											"error"
										]
									}
								},
								"default": {
									"default": "debug",
									"enableInternalDebug": false,
									"/main.ix": "debug"
								},
								"description": "Log level of modules. The level for a specific module can be configured by adding a <key: value>, example: `/file.ix : info`"
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "inox",
						"request": "launch",
						"name": "Launch Main Program",
						"program": "/main.ix",
						"logLevels": {
							"default": "debug",
							"enableInternalDebug": false,
							"/main.ix": "debug"
						}
					},
					{
						"type": "inox",
						"request": "launch",
						"name": "Launch Current Program",
						"program": "${file}",
						"logLevels": {
							"default": "debug",
							"enableInternalDebug": false
						}
					}
				]
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "inox-project",
					"title": "Inox Project",
					"icon": "assets/inox-no-padding-modified.svg"
				}
			]
		},
		"views": {
			"inox-project": [
				{
					"id": "secretKeeper",
					"name": "Secrets",
					"contextualTitle": "Secrets"
				},
				{
					"id": "prodOverview",
					"name": "Production",
					"type": "webview",
					"contextualTitle": "Production"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "secretKeeper",
				"contents": "No secrets found.\n[Add Secret](command:secretKeeper.addEntry)",
				"when": "view.loaded"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "inox.secretKeeper.addEntry",
					"when": "view == secretKeeper",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "inox.secretKeeper.deleteEntry",
					"when": "view == secretKeeper && viewItem == secret",
					"group": "inline"
				},
				{
					"command": "inox.secretKeeper.updateEntry",
					"when": "view == secretKeeper && viewItem == secret",
					"group": "inline"
				}
			]
		}
	},
	"capabilities": {
		"virtualWorkspaces": {
			"supported": true
		}
	},
	"activationEvents": [
		"workspaceContains:**/*.ix",
		"workspaceContains:inox-project.json",
		"onFileSystem:inox"
	],
	"main": "./out/extension",
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "npm i; tsc -p ./tsconfig-release.json; npm prune --prod; vsce package; npm i",
		"package:pre-release": "npm i; tsc -p ./tsconfig-release.json; npm prune --prod; vsce package --pre-release; npm i"
	},
	"devDependencies": {
		"@types/node": "16.11.12",
		"@types/vscode": "^1.77.0",
		"@types/ws": "^8.5.4",
		"@vscode/vsce": "^2.22.0",
		"typescript": "4.5.2"
	},
	"dependencies": {
		"@peculiar/webcrypto": "^1.4.3",
		"@vscode/debugadapter": "^1.61.0",
		"await-notify": "^1.0.1",
		"node-fetch": "^2.6.11",
		"vscode-debugprotocol": "^1.51.0",
		"vscode-html-languageservice": "^5.1.0",
		"vscode-jsonrpc": "^8.1.0",
		"vscode-languageclient": "^8.1.0",
		"web-worker": "^1.2.0",
		"ws": "^8.13.0"
	}
}
