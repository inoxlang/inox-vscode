{
	"name": "inox",
	"displayName": "inox",
	"description": "",
	"version": "0.0.4",
	"icon": "inox-128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/inoxlang/inox-vscode"
	},
	"publisher": "graphr00t",
	"engines": {
		"vscode": "^1.77.0"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
				"id": "inox",
				"aliases": [
					"Inox",
					"inox"
				],
				"extensions": [
					".ix"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "inox",
				"scopeName": "source.inox",
				"path": "./syntaxes/inox.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "inox",
				"path": "./snippets.json"
			}
		],
		"configurationDefaults": {
			"[inox]": {
				"editor.quickSuggestions": {
					"other": "on",
					"comments": "on",
					"strings": "on"
				}
			}
		},
		"configuration": {
			"title": "Inox",
			"properties": {
				"inox.websocketEndpoint": {
					"order": 0,
					"type": "string",
					"default": "wss://lsp.x.inox.run:7840",
					"description": "the endpoint of the Websocket LSP server.",
					"pattern": "^wss://.*$"
				},
				"inox.useInoxBinary": {
					"order": 1,
					"type": "boolean",
					"default": false,
					"description": "use the LSP server provided by the `inox` binary, `inox` should be in your $PATH for this to work.",
					"markdownDescription": "use the LSP server provided by the `inox` binary, `inox` should be in your `$PATH` for this to work."
				}
				
			}
		}
	},
	"capabilities": {
		"virtualWorkspaces": {
			"supported": true
		}
	},
	"activationEvents": [
		"workspaceContains:**/*.ix",
		"onLanguage:ix"
	],
	"main": "./out/extension",
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "16.11.12",
		"@types/vscode": "^1.77.0",
		"@types/ws": "^8.5.4",
		"typescript": "4.5.2"
	},
	"dependencies": {
		"vscode-jsonrpc": "^8.1.0",
		"vscode-languageclient": "^8.1.0",
		"ws": "^8.13.0"
	}
}
